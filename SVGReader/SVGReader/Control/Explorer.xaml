<UserControl x:Class="SVGReader.Control.Explorer"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:e="clr-namespace:SVGReader.Entity"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SVGReader.Control"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <TreeView x:Name="FilesTree" ItemsSource="{Binding Path=ItemsSource}">
            <TreeView.ItemTemplate>
                <HierarchicalDataTemplate DataType="{x:Type e:FloderEntity}" ItemsSource="{Binding Path=Children}">
                    <TextBlock Text="{Binding Path=Path}"/>
                </HierarchicalDataTemplate>
            </TreeView.ItemTemplate>
        </TreeView>
    </Grid>
</UserControl>
