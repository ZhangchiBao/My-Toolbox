<?xml version="1.0" encoding="utf-8" ?>
<TabbedPage xmlns="http://xamarin.com/schemas/2014/forms"
            xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
            xmlns:vm="clr-namespace:BookApp.Ndro.ViewModel"
            x:Class="BookApp.Ndro.View.HomePage" ItemsSource="{Binding Path=TabPages}" SelectedItem="{Binding Path=CurrentTabPage}">
    <NavigationPage.TitleView>
        <Grid>
            <Label HorizontalOptions="CenterAndExpand" Text="{Binding Path=CurrentTabPage.Title}" HorizontalTextAlignment="Center" VerticalTextAlignment="Center" FontSize="Medium" FontAttributes="Bold" VerticalOptions="Center"/>
            <Button HorizontalOptions="End" Text="搜索" VerticalOptions="Center" Command="{Binding Path=SearchCommand}" BackgroundColor="Transparent" BorderColor="Transparent"/>
        </Grid>
    </NavigationPage.TitleView>
    <TabbedPage.ItemTemplate>
        <DataTemplate>
            <ContentPage Title="{Binding Path=Title}" Icon="{Binding Path=Icon}" Content="{Binding Path=Content}"/>
        </DataTemplate>
    </TabbedPage.ItemTemplate>
    <!--Pages can be added as references or inline-->
    <!--<ContentPage Title="Tab 1" />
  <ContentPage Title="Tab 2" />
  <ContentPage Title="Tab 3" />-->
</TabbedPage>