<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="clr-namespace:Biblioteca_del_Papa.Controls">


    <Style TargetType="{x:Type local:BottomBtnGroup}">
        <Setter Property="CancelButtonContent" Value="取消"/>
        <Setter Property="ConfirmButtonContent" Value="确定"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="{x:Type local:BottomBtnGroup}">
                    <Border Background="{TemplateBinding Background}"
                            BorderBrush="{TemplateBinding BorderBrush}"
                            BorderThickness="{TemplateBinding BorderThickness}">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                            <Button Content="{TemplateBinding ConfirmButtonContent}" Command="{TemplateBinding ConfirmCommand}" Margin="{TemplateBinding ButtonMargin}" />
                            <Button Content="{TemplateBinding CancelButtonContent}" Command="{TemplateBinding CancelCommand}" Margin="{TemplateBinding ButtonMargin}"/>
                        </StackPanel>
                    </Border>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>
</ResourceDictionary>
